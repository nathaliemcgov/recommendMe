<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/background"
    android:padding="10dp"
    android:id="@+id/mainContainer"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileTitle">
        <edu.uw.nmcgov.recommendme.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE"
            android:gravity="center"
            android:textSize="40dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <edu.uw.nmcgov.recommendme.SecondCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileUsername"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#ffffff"
        android:layout_below="@+id/profileTitle"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Linked Accounts"
        android:id="@+id/linked"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tile_shape"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Manage Account"
        android:id="@+id/manageAccount"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tile_shape"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logout"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tile_shape"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tile_shape"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signUp"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tile_shape"
        />
</LinearLayout>

