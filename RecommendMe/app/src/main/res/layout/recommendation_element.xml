<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/tile_shape">

    <ImageButton
        android:id="@+id/saveMediaTitle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="@drawable/ic_star_unselected"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mediaType"
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:textAlignment="center"
            android:background="@drawable/ic_book_icon"
            />

        <edu.uw.nmcgov.recommendme.TileTitleFont
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/recommendationElement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="15dp"
            android:textColor="@color/textColor"
            android:textSize="22dp"
            android:text="title title title"
            />

    </RelativeLayout>

    <!--<TextView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="40dp"-->
        <!--android:id="@+id/tileRatio"-->
        <!--android:textAlignment="center"-->
        <!--android:layout_margin="5dp"-->
        <!--android:textColor="@color/textColor" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/thumbsDownBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:focusable="false"
            android:background="@drawable/thumbs_down_button"
            android:src="@drawable/ic_thumbs_down"
            android:state_selected="false"
            android:layout_toLeftOf="@+id/thumbsUpBtn"/>

        <ImageButton
            android:id="@+id/thumbsUpBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:focusable="false"
            android:background="@drawable/thumbs_up_button"
            android:src="@drawable/ic_thumbs_up"
            />


    </LinearLayout>
</LinearLayout>