<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/existing_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/tile_shape">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <edu.uw.nmcgov.recommendme.CustomTextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RCMD"
                android:textColor="@color/textColor"
                android:textSize="50dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <edu.uw.nmcgov.recommendme.CustomTextView
                android:id="@+id/colon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="50dp"
                android:textColor="@color/bookmarkSelected"
                android:layout_toRightOf="@id/appName"/>

            <edu.uw.nmcgov.recommendme.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ME"
                android:textSize="50dp"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <edu.uw.nmcgov.recommendme.SecondCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEDIA EXPLORER"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:layout_below="@id/title"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/existing_email">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email: "/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/existing_email_entry"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_input"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/existing_password">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" pass: "/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/existing_password_entry"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_input"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="let's go!"
        android:background="@drawable/tile_shape"
        android:id="@+id/proceed"/>

</LinearLayout>