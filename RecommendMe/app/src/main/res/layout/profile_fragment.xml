<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/background"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exploreTitle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE"
            android:gravity="center"
            android:textSize="40dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#ffffff"
        android:layout_below="@+id/exploreTitle"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Linked Accounts"
        android:id="@+id/linked"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tile_shape"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Saved Recommendations"
        android:id="@+id/saved"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tile_shape"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Desert Island Picks"
        android:id="@+id/picked"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tile_shape"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logout"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tile_shape"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tile_shape"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signUp"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tile_shape"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Delete Profile"
        android:id="@+id/deleteProfile"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tile_shape"
        />
</LinearLayout>