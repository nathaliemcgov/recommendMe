<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="edu.uw.nmcgov.recommendme.HomePageActivity">


    <RelativeLayout
        android:id="@+id/bigtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/tile_shape">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <edu.uw.nmcgov.recommendme.CustomTextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RCMD"
                android:textColor="@color/textColor"
                android:textSize="55dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <edu.uw.nmcgov.recommendme.CustomTextView
                android:id="@+id/colon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="55dp"
                android:textColor="@color/bookmarkSelected"
                android:layout_toRightOf="@id/appName"/>

            <edu.uw.nmcgov.recommendme.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ME"
                android:textSize="55dp"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <edu.uw.nmcgov.recommendme.SecondCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEDIA EXPLORER"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:layout_below="@id/title"/>

    </RelativeLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setupButton"
        android:background="@drawable/tile_shape"
        android:text="Setup"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bigtitle"
        />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tile_shape"
        android:layout_below="@+id/setupButton"/>
</RelativeLayout>
