<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="edu.uw.nmcgov.recommendme.SavedActivity">

    <RelativeLayout
        android:id="@+id/savedHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <edu.uw.nmcgov.recommendme.CustomTextView
            android:id="@+id/savedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textAlignment="center"
            android:text="YOUR SAVED ITEMS:"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_below="@+id/savedTitle"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gridContainer3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/savedHeader">
    </LinearLayout>
</LinearLayout>
