<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SetupPageActivity"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <LinearLayout
        android:id="@+id/createProfileArea"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:id="@+id/firstHalfTitle"
            android:text="Imagine you're stranded on a desert island... What"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mediaTypeDI"
            android:textSize="30dp"
            android:layout_below="@+id/firstHalfTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondHalfTitle"
            android:textSize="30dp"
            android:layout_below="@+id/mediaTypeDI"
            android:text="would you bring?"/>

        <AutoCompleteTextView
            android:id="@+id/searchMediaText1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondHalfTitle">
            <requestFocus />
        </AutoCompleteTextView>

        <AutoCompleteTextView
            android:id="@+id/searchMediaText2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchMediaText1">
        </AutoCompleteTextView>

        <AutoCompleteTextView
            android:id="@+id/searchMediaText3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchMediaText2">
        </AutoCompleteTextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_below="@+id/searchMediaText3"
            android:layout_height="wrap_content"
            android:id="@+id/next_button"
            android:text="next"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailPassContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>

</LinearLayout>